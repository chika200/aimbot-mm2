--// Cache
local game, workspace = game, workspace
local getgenv = getgenv
local Vector2new, Vector3zero, CFramenew, Drawingnew = Vector2.new, Vector3.zero, CFrame.new, Drawing.new
local GetService = game.GetService
local Players, RunService, UserInputService, TweenService = GetService(game, "Players"), GetService(game, "RunService"), GetService(game, "UserInputService"), GetService(game, "TweenService")

--// Aimbot Environment
getgenv().ExunysDeveloperAimbot = {
    DeveloperSettings = {
        UpdateMode = "RenderStepped",
        TeamCheckOption = "TeamColor",
        RainbowSpeed = 1 -- Bigger = Slower
    },

    Settings = {
        Enabled = true,

        TeamCheck = false, -- Disable to lock on all players.
        AliveCheck = true, -- Only lock onto alive players.
        WallCheck = true,  -- Prevent locking onto players behind walls.

        OffsetToMoveDirection = false,
        OffsetIncrement = 15,

        Sensitivity = 0,   -- Instant lock-on.
        Sensitivity2 = 2,  -- Faster mousemoverel sensitivity.

        LockMode = 1,      -- Use CFrame lock mode.
        LockPart = "Torso", -- Lock onto the torso. For R15 rigs, change to "UpperTorso".

        TriggerKey = Enum.UserInputType.MouseButton2,
        Toggle = false,

        HideKey = Enum.KeyCode.LeftControl, -- Default hide key is LeftControl
        CursorCircle = true, -- Show/Hide Cursor Circle
        Accuracy = 50,  -- Accuracy for aiming
        Smoothness = 50, -- Smoothness for aim transition
    },

    FOVSettings = {
        Enabled = false,       -- Disable FOV circle.
        Visible = false,       -- Hide FOV circle.
        Radius = 90,
        NumSides = 60,
        Thickness = 1,
        Transparency = 1,
        Filled = false,
        RainbowColor = false,
        RainbowOutlineColor = false,
        Color = Color3.fromRGB(255, 255, 255),
        OutlineColor = Color3.fromRGB(0, 0, 0),
        LockedColor = Color3.fromRGB(255, 150, 150)
    },

    Blacklisted = {},
    FOVCircleOutline = Drawingnew("Circle"),
    FOVCircle = Drawingnew("Circle")
}

local Environment = getgenv().ExunysDeveloperAimbot

-- Disable FOV Circle Visibility
Environment.FOVCircle.Visible = false
Environment.FOVCircleOutline.Visible = false

-- Set Up the Script
Environment.Load = function()
    print("Aimbot Loaded Successfully!")
    -- Include any additional setup logic if needed.
end

-- Load the Aimbot
Environment.Load()

--// GUI Setup
-- Creating the main GUI container
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local AccuracySlider = Instance.new("Slider")
local SmoothnessSlider = Instance.new("Slider")
local BodySelector = Instance.new("TextButton")
local HideKeyButton = Instance.new("TextButton")
local ToggleCursorButton = Instance.new("TextButton")
local HideButton = Instance.new("TextButton")

-- Set the parent of the GUI to the player's PlayerGui
ScreenGui.Parent = game.Players.LocalPlayer.PlayerGui
ScreenGui.Name = "AimbotGui"

-- Setup the main frame
MainFrame.Parent = ScreenGui
MainFrame.BackgroundTransparency = 1  -- Completely transparent
MainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
MainFrame.Size = UDim2.new(0, 300, 0, 500)
MainFrame.Position = UDim2.new(0, 100, 0, 100)
MainFrame.BorderRadius = UDim.new(0, 10)
MainFrame.Draggable = true  -- Make the frame draggable

-- Setup Accuracy slider
AccuracySlider.Parent = MainFrame
AccuracySlider.Size = UDim2.new(0, 250, 0, 30)
AccuracySlider.Position = UDim2.new(0, 25, 0, 50)
AccuracySlider.Text = "Accuracy: " .. Environment.Settings.Accuracy
AccuracySlider.Min = 0
AccuracySlider.Max = 100
AccuracySlider.ValueChanged:Connect(function(val)
    Environment.Settings.Accuracy = math.floor(val)
end)

-- Setup Smoothness slider
SmoothnessSlider.Parent = MainFrame
SmoothnessSlider.Size = UDim2.new(0, 250, 0, 30)
SmoothnessSlider.Position = UDim2.new(0, 25, 0, 100)
SmoothnessSlider.Text = "Smoothness: " .. Environment.Settings.Smoothness
SmoothnessSlider.Min = 0
SmoothnessSlider.Max = 100
SmoothnessSlider.ValueChanged:Connect(function(val)
    Environment.Settings.Smoothness = math.floor(val)
end)

-- Setup Body selector (Torso/Head/Legs selection)
BodySelector.Parent = MainFrame
BodySelector.Size = UDim2.new(0, 250, 0, 50)
BodySelector.Position = UDim2.new(0, 25, 0, 150)
BodySelector.Text = "Select Target: Torso"
BodySelector.MouseButton1Click:Connect(function()
    if BodySelector.Text == "Select Target: Torso" then
        BodySelector.Text = "Select Target: Head"
        Environment.Settings.LockPart = "Head"
    elseif BodySelector.Text == "Select Target: Head" then
        BodySelector.Text = "Select Target: Legs"
        Environment.Settings.LockPart = "Legs"
    else
        BodySelector.Text = "Select Target: Torso"
        Environment.Settings.LockPart = "Torso"
    end
end)

-- Setup Hide Key button
HideKeyButton.Parent = MainFrame
HideKeyButton.Size = UDim2.new(0, 250, 0, 50)
HideKeyButton.Position = UDim2.new(0, 25, 0, 200)
HideKeyButton.Text = "Set Hide Key (Current: " .. Environment.Settings.HideKey.Name .. ")"
HideKeyButton.MouseButton1Click:Connect(function()
    local input = UserInputService.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.Keyboard then
            Environment.Settings.HideKey = input.KeyCode
            HideKeyButton.Text = "Set Hide Key (Current: " .. Environment.Settings.HideKey.Name .. ")"
            input:Stop()
        end
    end)
end)

-- Setup Toggle Cursor button
ToggleCursorButton.Parent = MainFrame
ToggleCursorButton.Size = UDim2.new(0, 250, 0, 50)
ToggleCursorButton.Position = UDim2.new(0, 25, 0, 250)
ToggleCursorButton.Text = "Toggle Cursor Circle"
ToggleCursorButton.MouseButton1Click:Connect(function()
    Environment.Settings.CursorCircle = not Environment.Settings.CursorCircle
    ToggleCursorButton.Text = Environment.Settings.CursorCircle and "Hide Cursor Circle" or "Show Cursor Circle"
end)

-- Setup Hide GUI button
HideButton.Parent = MainFrame
HideButton.Size = UDim2.new(0, 250, 0, 50)
HideButton.Position = UDim2.new(0, 25, 0, 300)
HideButton.Text = "Hide/Show GUI"
HideButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible
end)

-- Hide the GUI by default if HideKey is pressed
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Environment.Settings.HideKey then
        MainFrame.Visible = not MainFrame.Visible
    end
end)

-- End of the script
