--// Cache
local game, workspace = game, workspace
local getgenv = getgenv
local Vector2new, Vector3zero, CFramenew, Drawingnew = Vector2.new, Vector3.zero, CFrame.new, Drawing.new
local GetService = game.GetService
local Players, RunService, UserInputService, TweenService = GetService(game, "Players"), GetService(game, "RunService"), GetService(game, "UserInputService"), GetService(game, "TweenService")

--// Aimbot Environment
getgenv().ExunysDeveloperAimbot = {
    DeveloperSettings = {
        UpdateMode = "RenderStepped",
        TeamCheckOption = "TeamColor",
        RainbowSpeed = 1 -- Bigger = Slower
    },

    Settings = {
        Enabled = true,

        TeamCheck = false, -- Disable to lock on all players.
        AliveCheck = true, -- Only lock onto alive players.
        WallCheck = true,  -- Prevent locking onto players behind walls.

        OffsetToMoveDirection = false,
        OffsetIncrement = 15,

        Sensitivity = 0,   -- Instant lock-on.
        Sensitivity2 = 2,  -- Faster mousemoverel sensitivity.

        LockMode = 1,      -- Use CFrame lock mode.
        LockPart = "Torso", -- Lock onto the torso. For R15 rigs, change to "UpperTorso".

        TriggerKey = Enum.UserInputType.MouseButton2,
        Toggle = false
    },

    FOVSettings = {
        Enabled = false,       -- Disable FOV circle.
        Visible = false,       -- Hide FOV circle.
        Radius = 90,
        NumSides = 60,
        Thickness = 1,
        Transparency = 1,
        Filled = false,
        RainbowColor = false,
        RainbowOutlineColor = false,
        Color = Color3.fromRGB(255, 255, 255),
        OutlineColor = Color3.fromRGB(0, 0, 0),
        LockedColor = Color3.fromRGB(255, 150, 150)
    },

    Blacklisted = {},
    FOVCircleOutline = Drawingnew("Circle"),
    FOVCircle = Drawingnew("Circle")
}

local Environment = getgenv().ExunysDeveloperAimbot

-- Disable FOV Circle Visibility
Environment.FOVCircle.Visible = false
Environment.FOVCircleOutline.Visible = false

-- Set Up the Script
Environment.Load = function()
    print("Aimbot Loaded Successfully!")
    -- Include any additional setup logic if needed.
end

-- Load the Aimbot
Environment.Load()

--// GUI Setup
-- Creating the main GUI container
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local AccuracySliderBackground = Instance.new("Frame")
local AccuracySlider = Instance.new("TextButton")
local SmoothnessSliderBackground = Instance.new("Frame")
local SmoothnessSlider = Instance.new("TextButton")
local BodySelector = Instance.new("TextButton")

-- Set the parent of the GUI to the player's PlayerGui
ScreenGui.Parent = game.Players.LocalPlayer.PlayerGui
ScreenGui.Name = "AimbotGui"

-- Setup the main frame
MainFrame.Parent = ScreenGui
MainFrame.BackgroundTransparency = 0.5
MainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
MainFrame.Size = UDim2.new(0, 300, 0, 500)
MainFrame.Position = UDim2.new(0, 100, 0, 100)

-- Add corner rounding to the frame
local corner = Instance.new("UICorner")
corner.Parent = MainFrame

-- Make the frame draggable
MainFrame.Draggable = true

-- Setup Accuracy slider background (as a frame)
AccuracySliderBackground.Parent = MainFrame
AccuracySliderBackground.Size = UDim2.new(0, 250, 0, 20)
AccuracySliderBackground.Position = UDim2.new(0, 25, 0, 50)
AccuracySliderBackground.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

-- Setup Accuracy slider (as a TextButton)
AccuracySlider.Parent = AccuracySliderBackground
AccuracySlider.Size = UDim2.new(0, 50, 0, 20)
AccuracySlider.Position = UDim2.new(0, 0, 0, 0)
AccuracySlider.Text = "50"
AccuracySlider.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
AccuracySlider.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Add corner rounding to the accuracy slider
local cornerAccuracySlider = Instance.new("UICorner")
cornerAccuracySlider.Parent = AccuracySliderBackground

-- Setup Smoothness slider background (as a frame)
SmoothnessSliderBackground.Parent = MainFrame
SmoothnessSliderBackground.Size = UDim2.new(0, 250, 0, 20)
SmoothnessSliderBackground.Position = UDim2.new(0, 25, 0, 100)
SmoothnessSliderBackground.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

-- Setup Smoothness slider (as a TextButton)
SmoothnessSlider.Parent = SmoothnessSliderBackground
SmoothnessSlider.Size = UDim2.new(0, 50, 0, 20)
SmoothnessSlider.Position = UDim2.new(0, 0, 0, 0)
SmoothnessSlider.Text = "50"
SmoothnessSlider.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
SmoothnessSlider.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Add corner rounding to the smoothness slider
local cornerSmoothnessSlider = Instance.new("UICorner")
cornerSmoothnessSlider.Parent = SmoothnessSliderBackground

-- Setup Body selector (Torso/Head selection)
BodySelector.Parent = MainFrame
BodySelector.Size = UDim2.new(0, 250, 0, 50)
BodySelector.Position = UDim2.new(0, 25, 0, 150)
BodySelector.Text = "Select Target: Torso"

-- Add corner rounding to the body selector
local cornerBodySelector = Instance.new("UICorner")
cornerBodySelector.Parent = BodySelector

-- Toggle between Torso and Head
BodySelector.MouseButton1Click:Connect(function()
    if BodySelector.Text == "Select Target: Torso" then
        BodySelector.Text = "Select Target: Head"
    else
        BodySelector.Text = "Select Target: Torso"
    end
end)
